{
	"compilerOptions": {
		"moduleResolution": "bundler",
		"target": "ESNext",
		"module": "ESNext",
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"checkJs": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"]
		},
		"types": ["svelte", "node"]
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte", "vite.config.js", "src/server.js", "src/db.ts"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
